extends ../../common/base

block content
  // start page wrapper
  .page-wrapper
    .page-content
      .page-breadcrumb.d-none.d-sm-flex.align-items-center.mb-3
        .breadcrumb-title.pe-3 Receipts
        .ps-3
          nav(aria-label='breadcrumb')
            ol.breadcrumb.mb-0.p-0
              li.breadcrumb-item
                a(href='javascript:;')
                  i.bx.bx-home-alt
              li.breadcrumb-item.active(aria-current='page') Add Receipt
      // end breadcrumb
      .row
        .col-xl-7.mx-auto
          .card.border-top.border-0.border-4.border-primary
            .card-body.p-5
              .form-body
                form
                  .row.g-3
                    .col-md-6.form-group
                      label#balance.form-label(for='customerListOptions') Customer Name
                      input#customerName.form-control(list='customerListOptions' placeholder='Type to search...' required)
                      datalist#customerListOptions
                        each customer in customers
                          option(value=`${customer.name}` id=`${customer.id}`)
                    .col-md-6.form-group
                      label.form-label(for='amount') Amount
                      input#amount.form-control(type='number' step='0.01' required)
                  .row.g-3.mt-2
                    .col-md-12.form-group
                      label.form-label(for='memo') Memo
                      textarea#memo.form-control(rows='2')
                  .row.g-3.mt-2
                    .col-12.form-group
                      button.btn.btn-primary.px-5(type='submit') Save
                      button#backButton.btn.btn-outline-primary.ms-4.px-5(type='button') Back
  script(src='/assets/js/custom/accounts/receipts/createReceipt.js')