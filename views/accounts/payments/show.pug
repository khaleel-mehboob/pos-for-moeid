extends ../../common/base

block content
  // start page wrapper
  .page-wrapper
    .page-content
      .page-breadcrumb.d-none.d-sm-flex.align-items-center.mb-3
        .breadcrumb-title.pe-3 Payments
        .ps-3
          nav(aria-label='breadcrumb')
            ol.breadcrumb.mb-0.p-0
              li.breadcrumb-item
                a(href='javascript:;')
                  i.bx.bx-home-alt
              li.breadcrumb-item.active(aria-current='page') View Payment
      // end breadcrumb
      .row
        .col-xl-7.mx-auto
          .card.border-top.border-0.border-4.border-primary
            .card-body.p-5
              .form-body
                form
                  .row.g-3
                    .col-md-6.form-group
                      label.form-label(for='supplierListOptions') Supplier Name
                      input#supplierName.form-control(value=`${payment.supplier.name}` disabled)
                    .col-md-6.form-group
                      label.form-label(for='amount') Amount
                      - let amount = (payment.amount * 1).toFixed(2).replace(/\d(?=(\d{3})+\.)/g, '$&,');
                      input#amount.form-control(type='text' value=`${amount}` disabled)
                  .row.g-3.mt-2
                    .col-md-12.form-group
                      label.form-label(for='memo') Memo
                      textarea#memo.form-control(rows='2' disabled) #{payment.memo}
                  .row.g-3.mt-2
                    .col-12.form-group
                      button#backButton.btn.btn-outline-primary.px-5(type='button') Back
  script(src='/assets/js/custom/accounts/payments/showPayment.js')