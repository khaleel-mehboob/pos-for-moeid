extends ../../common/base

block content
  // start page wrapper
  .page-wrapper
    .page-content
      .page-breadcrumb.d-none.d-sm-flex.align-items-center.mb-3
        .breadcrumb-title.pe-3 Accounts
        .ps-3
          nav(aria-label='breadcrumb')
            ol.breadcrumb.mb-0.p-0
              li.breadcrumb-item
                a(href='javascript:;')
                  i.bx.bx-home-alt
              li.breadcrumb-item.active(aria-current='page') Add New Account
      // end breadcrumb
      .row
        .col-xl-7.mx-auto
          .card.border-top.border-0.border-4.border-primary
            .card-body.p-5
              .form-body
                form
                  .row.g-3
                    .col-md-6.form-group
                      label.form-label(for='accountTitle') Account Title
                      input#accountTitle.form-control(type='text' required)
                    .col-md-6.form-group
                      label.form-label(for='accountGroup') Account Group
                      select#accountGroup.form-select(required)
                          option(value='' hidden disabled selected) Select Account Group ... 
                          option(value='asset') Asset
                          option(value='liability') Liability
                          option(value='revenue') Revenue
                          option(value='expense') Expense
                  .row.g-3.mt-2
                    .col-md-6.form-group
                      label.form-label(for='accountHead') Account Head
                      select#accountHead.form-select
                          option(value='' hidden disabled selected) Select Account Head ...
                    .col-md-6.form-group
                      label.form-label(for='accountSubHead') Account Sub-Head
                      select#accountSubHead.form-select
                        option(value='' hidden disabled selected) Select Account Sub-Head ...
                  .row.g-3.mt-2
                    .col-md-6.form-group
                      label.form-label(for='openingBalance') Opening Balance
                      input#openingBalance.form-control(type='number' step='0.01' required)
                    .col-12.form-group
                      button.btn.btn-primary.px-5(type='submit') Create
                      button#backButton.btn.btn-outline-primary.ms-4.px-5(type='button') Back
    script(src='/assets/js/custom/accounts/chartOfAccounts/filterAccounts.js')
    script(src='/assets/js/custom/accounts/chartOfAccounts/createAccount.js')