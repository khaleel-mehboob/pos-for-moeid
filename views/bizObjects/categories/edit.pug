extends ../../common/base

block content
  // start page wrapper
  .page-wrapper
    .page-content
      .page-breadcrumb.d-none.d-sm-flex.align-items-center.mb-3
        .breadcrumb-title.pe-3 Categories
        .ps-3
          nav(aria-label='breadcrumb')
            ol.breadcrumb.mb-0.p-0
              li.breadcrumb-item
                a(href='javascript:;')
                  i.bx.bx-home-alt
              li.breadcrumb-item.active(aria-current='page') Edit Category
      // end breadcrumb
      .row
        .col-xl-7.mx-auto
          .card.border-top.border-0.border-4.border-primary
            .card-body.p-5
              .form-body
                form.row.g-3
                  .col-md-6
                    label.form-label(for='categoryName') Category Name
                    input#categoryId.form-control(type='text' hidden value=`${category.id}`)
                    input#categoryName.form-control(type='text' required value=`${category.name}`)
                  .col-md-6
                    label.form-label(for='department') Department
                    select#department.form-select(required)
                      option(value='' disabled hidden) Choose...
                      each department in departments
                        if(department.id === category.department.id)
                          option(value=`${department.id}` selected) #{department.title}
                        else
                          option(value=`${department.id}`) #{department.title}
                  .col-12
                    button.btn.btn-primary.px-5(type='submit') Update
                    button#backButton.btn.btn-outline-primary.ms-4.px-5(type='button') Back
  script(src='/assets/js/custom/bizObjects/categories/editCategory.js')