extends ../../common/base

block content
  // start page wrapper
  .page-wrapper
    .page-content
      .page-breadcrumb.d-none.d-sm-flex.align-items-center.mb-3
        .breadcrumb-title.pe-3 Sales
        .ps-3
          nav(aria-label='breadcrumb')
            ol.breadcrumb.mb-0.p-0
              li.breadcrumb-item
                a(href='javascript:;')
                  i.bx.bx-home-alt
              li.breadcrumb-item.active(aria-current='page') Update Sale
      // end breadcrumb
      .row
        .col-xl-12.mx-auto 
          .card.border-top.border-0.border-4.border-primary
            .card-body.p-4
              .row
                .col-lg-12
                  .col-xl
                    .card
                      .card-body
                        .form-body-child
                          form#saleEntryForm
                            .row
                              .col-sm-1.form-group
                                label.form-label(for='barcode') Barcode
                                input#barcode.form-control(type='text')
                              .col-sm-3.form-group
                                label.form-label(for='itemListOptions') Select Item
                                input#itemName.form-control(list='itemListOptions' placeholder='Type to search...' required)
                                datalist#itemListOptions
                                  each item in items
                                    option(value=`${item.name}` id=`${item.id}-${item.barcode}-${item.price}`)
                              .col-sm-2.form-group
                                label.form-label(for='rate') Rate
                                input#rate.form-control(type='number' value='0.00' step='0.01' required)
                              .col-sm-2.form-group#qtyBlock
                                .col-sm-12.form-group
                                  label#qtyLabel.form-label(for='qty') Qty
                                  input#qty.form-control(type='number' value='0.00' step='0.01' required)
                              .col-sm-2.form-group
                                label.form-label(for='totalAmount') Total Amount
                                br
                                input#totalAmount.text-danger.form-control(disabled) 
                                //- label#totalAmount.form-label 0.00
                              .col-sm-2.form-group.align-bottom
                                br
                                button.btn.btn-outline-primary.px-5.mt-2(type='submit') Add
                      .card-body
                        .table-responsive
                          table.table.align-middle.mb-0
                            thead.table-light
                              tr
                                th Ser
                                th Item Name
                                th.text-end Rate
                                th.text-end Qty
                                th.text-end Amount
                                th Action
                            tbody#saleEntries
                              //- - let i = 0;
                              //- each saleEntry in sale.saleEntries
                              //-   tr
                              //-     td #{++i}
                              //-     td #{saleEntry.item.name}
                              //-     td #{saleEntry.rate}
                              //-     td #{saleEntry.qty}
                              //-     td #{saleEntry.rate * saleEntry.qty}
                                  //- td
                                  //-   <a class='saleEntry' id='saleEntry-${saleEntries.indexOf(e)}' href='#'>
                                  //-     <i class='fa fa-lg fa-trash'></i>
                                  //-   </a>
                                  //- </td>
                    form.form-body
                      button.btn.btn-primary.px-5(type='submit') Update
                      button#backButton.btn.btn-outline-primary.ms-4.px-5(type='button') Back
  script(src='/assets/js/custom/operations/sales/editSale.js')
  script(src='/assets/js/custom/operations/printInvoice.js')